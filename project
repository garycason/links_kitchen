const meals = []

// defining the cook function
//we need to add a third parameter



const cook = (firstIngredient, secondIngredient) => {
    if (firstIngredient === 'Hylian Rice' && secondIngredient === 'Big Hearty Radish') {
        meals.push('Mushroom Rice Balls')}
    else if (firstIngredient === 'Hateno Cheese' && secondIngredient === 'Bird Egg')
        meals.push('Cheesy Omelette')
    }

// calling the cook function
cook(materials[0], materials[1])

// logging meals
